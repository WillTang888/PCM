@model  Panacea.Communcation.Management.UI.Models.ContactListVM

@{
    ViewBag.Title = "Contacts";
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}

<div class="animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">
                <p><button id="btnAddClient" type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modalAddClient"><i class="fa fa-plus"></i> Add Contact</button></p>

                <table class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Organisation</th>
                            <th>Job Title</th>
                            <th>Email</th>
                            <th>Country</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Contacts)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Organisation</td>
                                <td>@item.JobTitle</td>
                                <td>@item.Email</td>
                                <td>@item.Country</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ModalAddContact", Model.addContactVm)


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/chosen")
    <script src="~/Scripts/Custom/global.js"></script>

    <script type="text/javascript">


        $(document).ready(function() {

            InitDataTable(); // Method in Global.js

            $(document).on('click', '#btnAddContact', function () {

                if ($('#FormAddContact').valid()) {

                    var f = $('#FormAddContact');
                    var action = f.attr("action");
                    var serializedForm = f.serialize();

                    $.post(action, serializedForm,
                        function (result) {
                            if (result.status == "Ok") {
                                var redirect = '@Url.Action("Contacts", "Contacts")';
                                window.location.href = redirect;
                            }
                            else {
                                alert("Error: " + result.message);
                            }
                        });
                }
            });
        });

    </script>

}
