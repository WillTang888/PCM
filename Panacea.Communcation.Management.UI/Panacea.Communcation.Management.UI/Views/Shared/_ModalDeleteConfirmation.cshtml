@model Panacea.Communcation.Management.UI.Models.DeleteConfirmationInfo

<div id="modal-ConfirmDelete" class="modal fade" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                @using (Html.BeginForm(@Model.DeleteAction, @Model.DeleteController, FormMethod.Post, new { @Id = "FormDelete", role = "form" }))
                {
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@Model.ModalTitle</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3>Please confirm delete <i class="fa fa-exclamation-circle" aria-hidden="true"></i></h3>
                                <input type="hidden" value=@Model.Id name="Id" />
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-sm btn-danger" value="Delete" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
