@model Panacea.Communcation.Management.UI.Models.EnquiryVM

@{
    ViewBag.Title = "Add Enquiry";
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}


<div class="animated fadeInRight">
    <div class="ibox">
        <div class="ibox-content">

            @using (Html.BeginForm(Model.Id == 0 ? "AddEnquiry" : "EditEnquiry", "Interactions", FormMethod.Post, new { @Id = "FormEnquiry", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        <h2><strong><i class="fa fa-compass" aria-hidden="true"></i> Enquiry</strong></h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.ContactId, Model.ContactList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.ContactId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.OrganisationId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.OrganisationId, Model.OganisationList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.OrganisationId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(m => m.Summary, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Summary, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.Summary, "", new { @class = "text-danger" })
                            </div>
                        </div>
                                              
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-sm", @rows = 7 })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.InternalNotes, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.InternalNotes, new { @class = "form-control input-sm", @rows = 3 })
                                @Html.ValidationMessageFor(m => m.InternalNotes, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(m => m.EnquiryStatusId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.EnquiryStatusId, Model.EnquiryStatusList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.EnquiryStatusId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.UserId, Model.UserList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TeamId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.TeamId, Model.TeamList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.TeamId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.EnquiryTypeId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.EnquiryTypeId, Model.EnquiryTypeList, new { @class = "chosen-select", tabindex = "2", placeholder = "Please Select" })
                                @Html.ValidationMessageFor(m => m.EnquiryTypeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

              


            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/chosen")

    <script src="~/Scripts/Custom/global.js"></script>
    @Scripts.Render("~/bundles/custom")
}
